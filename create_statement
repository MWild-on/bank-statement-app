import io
import zipfile
from copy import deepcopy
from datetime import datetime, date

import pandas as pd
import streamlit as st
from docx import Document


# --------- ВСПОМОГАТЕЛЬНЫЕ ФУНКЦИИ ---------

def format_date(d: pd.Timestamp | date | None) -> str:
    if pd.isna(d) or d is None:
        return ""
    if isinstance(d, pd.Timestamp):
        d = d.date()
    return d.strftime("%d.%m.%Y")


def format_amount(x) -> str:
    if pd.isna(x) or x == 0:
        return ""
    # 12345.6 -> "12 345,60"
    s = f"{float(x):,.2f}"
    s = s.replace(",", "X").replace(".", ",").replace("X", " ")
    return s


def load_caseid_df(xls_bytes: bytes) -> pd.DataFrame:
    return pd.read_excel(io.BytesIO(xls_bytes), sheet_name="CaseID")


def load_payments_df(xls_bytes: bytes) -> pd.DataFrame:
    # читаем с двухстрочным заголовком
    raw = pd.read_excel(io.BytesIO(xls_bytes), sheet_name="Payments", header=[0, 1])
    # отбрасываем вторую строку шапки
    df = raw.iloc[1:].copy()
    df.columns = [
        "_".join([str(c) for c in col if str(c) != "nan"]).strip()
        for col in df.columns
    ]
    return df


def prepare_payments(df: pd.DataFrame) -> pd.DataFrame:
    # приводим типы и вычисляем сумму
    df = df.copy()
    date_col = "ДАННЫЕ ПО ВЫПИСКЕ_Дата проводки"
    reg_col = "ДАННЫЕ ПО ВЫПИСКЕ_Рег.номер"
    debit_col = "ДАННЫЕ ПО ВЫПИСКЕ_Сумма по дебету"
    credit_col = "ДАННЫЕ ПО ВЫПИСКЕ_Сумма по кредиту"

    df[reg_col] = pd.to_numeric(df[reg_col], errors="coerce").astype("Int64")
    df[debit_col] = pd.to_numeric(df[debit_col], errors="coerce").fillna(0)
    df[credit_col] = pd.to_numeric(df[credit_col], errors="coerce").fillna(0)
    df["СумаПлатежа"] = df[debit_col] + df[credit_col]

    # на всякий случай приводим дату
    df[date_col] = pd.to_datetime(df[date_col], errors="coerce")

    return df


def fill_template_r(
    template_bytes: bytes,
    header_data: dict,
    payments_case_df: pd.DataFrame,
) -> bytes:
    """
    Возвращает байты docx c заполненной выпиской по шаблону R.
    """
    doc = Document(io.BytesIO(template_bytes))

    # ---- верхняя таблица ----
    top = doc.tables[0]

    # здесь жёстко привязываемся к структуре Template R.docx
    # при необходимости можно подправить индексы ячеек
    stmt_date_str = header_data["stmt_date"].strftime("%d.%m.%Y")
    stmt_time_str = header_data["stmt_time"].strftime("%H:%M:%S")
    period_str = (
        f"за период с {header_data['period_from'].strftime('%-d %B %Y')} г. "
        f"по {header_data['period_to'].strftime('%-d %B %Y')} г."
    )

    # строка 0: дата (ячейка [0,0])
    top.cell(0, 0).text = stmt_date_str

    # строка 1: банк
    top.cell(1, 0).text = header_data["bank_name"]

    # строка 2: "Дата формирования выписки ..."
    top.cell(2, 0).text = (
        f"Дата формирования выписки {stmt_date_str} в {stmt_time_str}"
    )

    # строка 3: заголовок и счёт
    top.cell(3, 0).text = "ВЫПИСКА ОПЕРАЦИЙ ПО ЛИЦЕВОМУ СЧЕТУ"
    top.cell(3, 1).text = "ВЫПИСКА ОПЕРАЦИЙ ПО ЛИЦЕВОМУ СЧЕТУ"
    top.cell(3, 2).text = header_data["account_number"]

    # строка 4: наименование компании
    top.cell(4, 2).text = header_data["company_name"]

    # строка 5: период
    top.cell(5, 2).text = period_str
    top.cell(5, 3).text = period_str

    # строка 6: валюта
    top.cell(6, 1).text = header_data["currency"]

    # ---- нижняя таблица с операциями ----
    tbl = doc.tables[1]

    # предполагаем:
    # row 0 – заголовки,
    # row 1 – подзаголовки,
    # row 2 – пример строки,
    # остальные – пустые
    template_row = tbl.rows[2]._tr
    tbl_el = tbl._tbl

    # очищаем все строки ниже второй, чтобы не тащить старые данные
    while len(tbl.rows) > 2:
        tbl_el.remove(tbl.rows[-1]._tr)

    # теперь создаём строки по платежам
    date_col = "ДАННЫЕ ПО ВЫПИСКЕ_Дата проводки"
    acc_debit_col = "ДАННЫЕ ПО ВЫПИСКЕ_Счет"
    acc_credit_col = "ДАННЫЕ ПО ВЫПИСКЕ_Счет.1"
    debit_col = "ДАННЫЕ ПО ВЫПИСКЕ_Сумма по дебету"
    credit_col = "ДАННЫЕ ПО ВЫПИСКЕ_Сумма по кредиту"
    docnum_col = "ДАННЫЕ ПО ВЫПИСКЕ_№ документа"
    vo_col = "ДАННЫЕ ПО ВЫПИСКЕ_ВО"
    bank_col = "ДАННЫЕ ПО ВЫПИСКЕ_Банк (БИК и наименование)"
    purpose_col = "ДАННЫЕ ПО ВЫПИСКЕ_Назначение платежа"

    for _, row in payments_case_df.iterrows():
        new_tr = deepcopy(template_row)
        tbl_el.append(new_tr)
        new_row = tbl.rows[-1]

        cells = new_row.cells
        cells[0].text = format_date(row[date_col])
        cells[1].text = str(row.get(acc_debit_col, "") or "")
        cells[2].text = str(row.get(acc_credit_col, "") or "")
        cells[3].text = format_amount(row.get(debit_col, 0))
        cells[4].text = format_amount(row.get(credit_col, 0))
        cells[5].text = str(row.get(docnum_col, "") or "")
        cells[6].text = str(row.get(vo_col, "") or "")
        cells[7].text = str(row.get(bank_col, "") or "")
        cells[8].text = str(row.get(purpose_col, "") or "")

    # удаляем шаблонную строку (если она всё ещё в таблице)
    # (на случай, если платежей не было, оставим хотя бы одну пустую строку)
    if len(tbl.rows) > 2:
        tbl_el.remove(template_row)

    out_buf = io.BytesIO()
    doc.save(out_buf)
    out_buf.seek(0)
    return out_buf.getvalue()


def update_caseid_with_sums(case_df: pd.DataFrame, payments_df: pd.DataFrame) -> pd.DataFrame:
    reg_col = "ДАННЫЕ ПО ВЫПИСКЕ_Рег.номер"
    sums = payments_df.groupby(reg_col)["СумаПлатежа"].sum()
    result = case_df.copy()
    result["Сума платежей"] = result["Рег.номер"].map(sums).fillna(0)
    return result


def build_result_excel(case_df: pd.DataFrame, payments_raw_df: pd.DataFrame) -> bytes:
    out = io.BytesIO()
    with pd.ExcelWriter(out, engine="openpyxl") as writer:
        case_df.to_excel(writer, sheet_name="CaseID", index=False)
        payments_raw_df.to_excel(writer, sheet_name="Payments", index=False)
    out.seek(0)
    return out.getvalue()


# --------- СЕКЦИЯ STREAMLIT ---------

def render_create_statement_section():
    st.header("Создание выписки")

    uploaded_file = st.file_uploader(
        "Загрузите Excel с листами CaseID и Payments",
        type=["xlsx"],
    )

    template_file = st.file_uploader(
        "Загрузите шаблон Template R (docx)",
        type=["docx"],
    )

    with st.form("statement_params"):
        st.subheader("Параметры шапки выписки")

        today = date.today()
        now = datetime.now().time()

        stmt_date = st.date_input("Дата формирования выписки", value=today)
        stmt_time = st.time_input("Время формирования выписки", value=now)
        bank_name = st.text_input("Банк", value="ПАО СБЕРБАНК")
        account_number = st.text_input("Номер счета", value="40702810738000100334")
        company_name = st.text_input(
            "Наименование компании",
            value='ОБЩЕСТВО С ОГРАНИЧЕННОЙ ОТВЕТСТВЕННОСТЬЮ "РУССКИЙ ИНФОРМАЦИОННЫЙ СЕРВИС"',
        )
        period_from = st.date_input("Период с", value=today.replace(month=1, day=1))
        period_to = st.date_input("Период по", value=today)
        currency = st.text_input("Валюта", value="Российский рубль")

        submitted = st.form_submit_button("Сформировать выписки")

    if not submitted:
        return

    if uploaded_file is None or template_file is None:
        st.error("Нужно загрузить и Excel, и шаблон Template R.")
        return

    xls_bytes = uploaded_file.read()
    template_bytes = template_file.read()

    # читаем данные
    case_df = load_caseid_df(xls_bytes)
    payments_raw_df = load_payments_df(xls_bytes)
    payments_df = prepare_payments(payments_raw_df)

    header_data = {
        "stmt_date": stmt_date,
        "stmt_time": stmt_time,
        "bank_name": bank_name,
        "account_number": account_number,
        "company_name": company_name,
        "period_from": period_from,
        "period_to": period_to,
        "currency": currency,
    }

    reg_col_payments = "ДАННЫЕ ПО ВЫПИСКЕ_Рег.номер"

    zip_buf = io.BytesIO()
    with zipfile.ZipFile(zip_buf, mode="w", compression=zipfile.ZIP_DEFLATED) as zf:
        for _, row in case_df.iterrows():
            reg_num = row["Рег.номер"]
            template_code = str(row["Шалон"]).strip()

            if template_code != "R":
                # пока пропускаем другие шаблоны
                continue

            case_payments = payments_df[payments_df[reg_col_payments] == reg_num]
            if case_payments.empty:
                # если нет платежей — можем не создавать файл, либо создать пустую выписку
                continue

            docx_bytes = fill_template_r(template_bytes, header_data, case_payments)

            # на текущем этапе сохраняем DOCX
            # для PDF можно позже добавить конвертацию docx -> pdf
            filename = f"{reg_num}.docx"
            zf.writestr(filename, docx_bytes)

    zip_buf.seek(0)

    # обновляем CaseID суммами
    case_updated_df = update_caseid_with_sums(case_df, payments_df)
    result_xlsx = build_result_excel(case_updated_df, payments_raw_df)

    st.success("Выписки сформированы.")

    st.download_button(
        "Скачать архив выписок (ZIP)",
        data=zip_buf.getvalue(),
        file_name="statements.zip",
        mime="application/zip",
    )

    st.download_button(
        "Скачать обновлённый Excel (CaseID + Сума платежей)",
        data=result_xlsx,
        file_name=uploaded_file.name.replace(".xlsx", "_with_sums.xlsx"),
        mime=(
            "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
        ),
    )

